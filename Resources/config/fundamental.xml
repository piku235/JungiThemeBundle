<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="jungi_theme.registry.class">Jungi\Bundle\ThemeBundle\Core\ThemeRegistry</parameter>
        <parameter key="jungi_theme.cache_warmer.composite_finder.class">Jungi\Bundle\ThemeBundle\CacheWarmer\CompositeTemplateFinder</parameter>
        <parameter key="jungi_theme.cache_warmer.finder.class">Jungi\Bundle\ThemeBundle\CacheWarmer\TemplateFinder</parameter>
        <parameter key="jungi_theme.holder.default.class">Jungi\Bundle\ThemeBundle\Core\ThemeHolder</parameter>
        <parameter key="jungi_theme.mobile_detect.class">Jungi\Bundle\ThemeBundle\Core\MobileDetect</parameter>
        <parameter key="jungi_theme.selector.class">Jungi\Bundle\ThemeBundle\Selector\ThemeSelector</parameter>
        <parameter key="jungi_theme.resolver.virtual.class">Jungi\Bundle\ThemeBundle\Resolver\VirtualThemeResolver</parameter>
        <parameter key="jungi_theme.resolver.filter.device.class">Jungi\Bundle\ThemeBundle\Resolver\Filter\DeviceThemeFilter</parameter>
        <parameter key="jungi_theme.changer.class">Jungi\Bundle\ThemeBundle\Changer\ThemeChanger</parameter>
    </parameters>

    <services>
        <service id="jungi_theme.tag.registry" class="Jungi\Bundle\ThemeBundle\Tag\Registry\SimpleTagRegistry">
            <argument /> <!-- tag classes -->
        </service>
        <service id="jungi_theme.mobile_detect" class="%jungi_theme.mobile_detect.class%">
            <argument type="service" id="request_stack" />
        </service>
        <service id="jungi_theme.holder.default" class="%jungi_theme.holder.default.class%" />
        <service id="jungi_theme.cache_warmer.composite_finder" class="%jungi_theme.cache_warmer.composite_finder.class%" public="false">
            <argument type="collection">
                <argument type="service" id="templating.finder" />
                <argument type="service" id="jungi_theme.cache_warmer.finder" />
            </argument>
        </service>
        <service id="jungi_theme.cache_warmer.finder" class="%jungi_theme.cache_warmer.finder.class%" public="false">
            <argument type="service" id="jungi_theme.registry" />
            <argument type="service" id="jungi_theme.templating.filename_parser" />
        </service>
        <service id="jungi_theme.automatic_loader" class="Jungi\Bundle\ThemeBundle\Core\AutomaticLoader">
            <argument />
            <argument type="collection">
                <argument key="xml" type="service" id="jungi_theme.mapping.loader.xml" />
                <argument key="yml" type="service" id="jungi_theme.mapping.loader.yml" />
                <argument key="php" type="service" id="jungi_theme.mapping.loader.php" />
            </argument>
            <argument type="service" id="jungi_theme.registry" />
        </service>
        <service id="jungi_theme.registry" class="%jungi_theme.registry.class%" />
        <service id="jungi_theme.resolver.virtual" class="%jungi_theme.resolver.virtual.class%" />
        <service id="jungi_theme.resolver.filter.device" class="%jungi_theme.resolver.filter.device.class%">
            <tag name="jungi_theme.filter" />
            <argument type="service" id="jungi_theme.mobile_detect" />
            <argument type="service" id="jungi_theme.registry" />
        </service>
        <service id="jungi_theme.changer" class="%jungi_theme.changer.class%">
            <argument type="service" id="jungi_theme.selector" />
            <argument type="service" id="jungi_theme.resolver" />
            <argument type="service" id="event_dispatcher" />
        </service>
        <service id="jungi_theme.selector" class="%jungi_theme.selector.class%">
            <argument type="service" id="jungi_theme.registry" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="jungi_theme.resolver" />
            <argument type="service" id="jungi_theme.resolver.fallback" on-invalid="null" />
        </service>
        <!-- Aliases -->
        <service id="jungi_theme.resolver" alias="jungi_theme.resolver.primary" />
    </services>
</container>
