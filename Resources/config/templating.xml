<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="jungi_theme.templating.name_parser.class">Jungi\Bundle\ThemeBundle\Templating\TemplateNameParser</parameter>
        <parameter key="jungi_theme.templating.filename_parser.class">Jungi\Bundle\ThemeBundle\Templating\TemplateFilenameParser</parameter>
        <parameter key="jungi_theme.templating.locator.class">Jungi\Bundle\ThemeBundle\Templating\Loader\TemplateLocator</parameter>
    </parameters>

    <services>
        <service id="jungi_theme.templating.filename_parser" class="%jungi_theme.templating.filename_parser.class%" />
        <service id="jungi_theme.templating.name_parser" class="%jungi_theme.templating.name_parser.class%">
            <argument type="service" id="jungi_theme.holder" />
            <argument type="service" id="kernel" />
        </service>
        <service id="jungi_theme.templating.locator" class="%jungi_theme.templating.locator.class%" public="false">
            <argument type="service" id="jungi_theme.registry" />
            <argument type="service" id="file_locator" />
            <argument>%kernel.cache_dir%</argument>
        </service>
        <!-- Aliases -->
        <service id="templating.locator" alias="jungi_theme.templating.locator" />
        <service id="templating.name_parser" alias="jungi_theme.templating.name_parser" />
    </services>
</container>
